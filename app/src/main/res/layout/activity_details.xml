    <RadioGroup
        android:id="@+id/radioGrpGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="64dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_alignTop="@+id/about_me"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Gender"
            android:id="@+id/textView3"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male"
            android:id="@+id/maleBtn"
            android:layout_alignTop="@+id/gender_label"
            android:layout_toRightOf="@+id/femaleBtn"
            android:layout_toEndOf="@+id/femaleBtn" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female"
            android:id="@+id/femaleBtn"
            android:layout_alignTop="@+id/maleBtn"
            android:layout_toRightOf="@+id/name_label"
            android:layout_toEndOf="@+id/name_label" />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/radioGrpInterested"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="64dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Looking for"
            android:id="@+id/looking_for_label"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male"
            android:id="@+id/maleBtnInterest"
            android:layout_alignTop="@+id/looking_for_label"
            android:layout_toRightOf="@+id/femaleBtnInterest"
            android:layout_toEndOf="@+id/femaleBtnInterest" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female"
            android:id="@+id/femaleBtnInterest"
            android:layout_alignTop="@+id/maleBtnInterest"
            android:layout_toRightOf="@+id/name_label"
            android:layout_toEndOf="@+id/name_label" />
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="About me"
        android:id="@+id/about_me"
        android:layout_below="@+id/my_child_toolbar"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Interests"
        android:id="@+id/textView2"
        android:layout_above="@+id/radioGrpInterested"
        android:layout_alignLeft="@+id/about_me"
        android:layout_alignStart="@+id/about_me" />

</RelativeLayout>
